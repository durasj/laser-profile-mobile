<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorLight</item>
        <item name="colorOnSecondary">@color/colorLight</item>
        <item name="android:colorBackground">@color/colorDarker</item>
        <item name="android:statusBarColor">@color/colorDarker</item>
        <item name="colorSurface">@color/colorDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorLight</item>
        <item name="colorOnSecondary">@color/colorLight</item>
        <item name="android:colorBackground">@color/colorDarker</item>
        <item name="android:statusBarColor">@color/colorDarker</item>
        <item name="colorSurface">@color/colorDark</item>
    </style>

</resources>
